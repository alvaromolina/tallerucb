<h1>Practicas</h1>

<table class="table table-striped">
  <tr>
    <th>Usuario</th>
    <th>Email</th>
    <th>Ejercicio</th>
    <th>Puntos</th>
    <th>Archivo</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.exercise_name %></td>
    <td><%= user.points %></td>
    <td><%= link_to user.file_file_name ? user.file_file_name.to_s : '' , '/assets/solutions/' +
    ((user.solutions_id) ? user.solutions_id.to_s : 'NA' ) +
    '/original/' + user.file_file_name.to_s %>

    </td>

  </tr>
<% end %>
</table>
<br />